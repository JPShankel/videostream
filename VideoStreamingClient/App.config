<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
    
    <appSettings>
        <!-- Client Configuration -->
        <add key="DefaultServerIP" value="127.0.0.1" />
        <add key="ServerPort" value="8080" />
        <add key="ConnectionTimeout" value="5000" />
        <add key="ReceiveTimeout" value="10000" />
        <add key="BufferSize" value="65536" />
        
        <!-- Display Configuration -->
        <add key="ShowFPS" value="true" />
        <add key="AutoReconnect" value="false" />
        <add key="ReconnectInterval" value="3000" />
        
        <!-- Logging Configuration -->
        <add key="EnableLogging" value="true" />
        <add key="LogLevel" value="Info" />
    </appSettings>
    
    <system.net>
        <settings>
            <!-- Network settings for client connections -->
            <httpWebRequest useUnsafeHeaderParsing="false" />
        </settings>
        
        <connectionManagement>
            <!-- Allow multiple concurrent connections -->
            <add address="*" maxconnection="10" />
        </connectionManagement>
    </system.net>
    
    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <!-- Assembly binding redirects if needed -->
        </assemblyBinding>
        
        <!-- Garbage Collection Configuration -->
        <gcServer enabled="false" />
        <gcConcurrent enabled="true" />
    </runtime>
</configuration>